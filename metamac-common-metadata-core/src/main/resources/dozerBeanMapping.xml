<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://dozer.sourceforge.net http://dozer.sourceforge.net/schema/beanmapping.xsd">

	<configuration>
		<custom-converters>
			<converter type="org.siemac.metamac.common.metadata.service.dto.Date2JodaTimeConverter">
				<class-a>org.joda.time.DateTime</class-a>
				<class-b>java.util.Date</class-b>
			</converter>
			<converter type="org.siemac.metamac.common.metadata.service.dto.Long2JodaDurationConverter">
				<class-a>org.joda.time.Duration</class-a>
				<class-b>java.lang.Long</class-b>
			</converter>
		</custom-converters>
	</configuration>


	<!-- ***********************************************************
	 ONLY CLASS WITH DIRECT ID FIELD
	**************************************************************** -->

	<mapping>
		<class-a>org.siemac.metamac.common.metadata.dto.serviceapi.ConfigurationDto</class-a>
  		<class-b>org.siemac.metamac.common.metadata.base.domain.Configuration</class-b>
		<field>
			<a>id</a>
			<b is-accessible="true">id</b>
		</field>
		<field>
			<a>uuid</a>
			<b is-accessible="true">uuid</b>
		</field>
	</mapping>
	
	<mapping>
		<class-a>org.siemac.metamac.core.common.dto.serviceapi.InternationalStringDto</class-a>
  		<class-b>org.siemac.metamac.core.common.ent.domain.InternationalString</class-b>
		<field>
			<a>id</a>
			<b is-accessible="true">id</b>
		</field>
		<field>
			<a>uuid</a>
			<b is-accessible="true">uuid</b>
		</field>
	</mapping>
	
	<mapping>
		<class-a>org.siemac.metamac.core.common.dto.serviceapi.ExternalItemBtDto</class-a>
  		<class-b>org.siemac.metamac.core.common.bt.domain.ExternalItemBt</class-b>
		<field>
			<a>type</a>
			<b is-accessible="true">type</b>
		</field>
	</mapping>

</mappings>